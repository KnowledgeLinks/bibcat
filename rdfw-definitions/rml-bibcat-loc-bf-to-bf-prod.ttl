<#LOCBFInstance_to_BFTitle> a rr:TriplesMap ;

    rml:logicalSource [
        rml:source <#SPARQL_JSON_source> ;
        rml:referenceFormulation ql:JSON ;
        rml:query """SELECT DISTINCT ?title
                     WHERE {{ <{instance}> bf:title ?title }}""";
        rml:iterator "title"
    ] ;

    rr:subjectMap [
        rr:termType rr:BlankNode ;
        rr:class bf:Title ;
    ] ;

    rr:predicateObjectMap [
        rr:predicate rdfs:label ;
        rr:objectMap [
            rml:query """SELECT DISTINCT ?label
                         WHERE {{ _:{title} rdfs:label ?label .
                                  _:{title} rdf:type bf:Title .}}"""
        ]
    ] ;

    rr:predicateObjectMap [
        rr:predicate bf:mainTitle ;
        rr:objectMap [
            rml:query """SELECT DISTINCT ?value
                         WHERE {{  _:{title} rdf:type bf:Title .
                                  _:{title} bf:mainTitle ?value . }}"""
        ]
    ] ;

    rr:predicateObjectMap [
        rr:predicate bf:subtitle ;
        rr:objectMap [
            rml:query """SELECT DISTINCT ?value
                         WHERE {{ _:{title} rdf:type bf:Title .
                                  _:{title} bf:subtitle ?value . }}"""
        ]
    ] .

